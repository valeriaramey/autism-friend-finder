 <h4>
  <%= @playmates.count %>
  </h4>
 <h1>Friends Found</h1>


<div class="container">
  <div class="row">
    <% @playmates.each do |playmate| %>
      <div class="col-12 col-md-6 col-lg-3">
        <%= link_to playmate_path(playmate), class: "card-link" do %>
          <div class="playmate-card-content">
            <h2><%= playmate.name %>,<%= playmate.age %> </h2>
            <h2></h2>
          </div>
        </div>
        <br>
       <% end %>
      </div>
    <% end  %>
  </div>
</div>
